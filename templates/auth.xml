<fest:template xmlns:fest="http://fest.mail.ru">
    <fest:script>var json = {title: 'Authentication' };</fest:script>
    <fest:include src="./base.xml" context="json"/>
    <div class="b-main-signup-form">
        <p class="b-main-signup-form__error-message"></p>
        <form method="post" action="">
            <input type="text" value="Name" class="b-main-form__control b-main-form__input b-main-signup-form__input_type_name"/>
            <input type="email" value="Email" class="b-main-form__control b-main-form__input b-main-signup-form__input_type_email"/>
            <input type="password" placeholder="Password" class="b-main-form__control b-main-form__input b-main-signup-form__input_type_password"/>
            <input type="password" placeholder="Repeat password" class="b-main-form__control b-main-form__input b-main-signup-form__input_type_repeated-password"/>
            <input type="submit" value="Submit" class="b-main-form__control b-main-form__button b-main-signup-form__submit-login-button"/>
        </form>
    </div>
    <fest:include src="./backbutton.xml"/>
</fest:template>
