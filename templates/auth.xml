<fest:template xmlns:fest="http://fest.mail.ru">
    <fest:script>var json = {title: 'Authentication', 'backbutton': true };</fest:script>
    <div class="b-signup-page b-default-hidden-page">
        <fest:include src="./base.xml" context="json"/>
        <div class="b-main-signup-form">
            <p class="b-main-signup-form__error-message"></p>
            <form method="post" action="" class="b-form__type_signup">
                <input type="text" name="name" placeholder="Name" class="b-main-form__control b-main-form__input b-main-signup-form__input_type_name"/>
                <input type="email" name="email" placeholder="Email" class="b-main-form__control b-main-form__input b-main-signup-form__input_type_email"/>
                <input type="password" name="pswd" placeholder="Password" class="b-main-form__control b-main-form__input b-main-signup-form__input_type_password"/>
                <input type="password" name="repeatpswd" placeholder="Repeat password" class="b-main-form__control b-main-form__input b-main-signup-form__input_type_repeated-password"/>
               <input type="submit" value="Submit" class="b-main-form__control b-main-form__button b-main-signup-form__submit-login-button"/>
            </form>
        </div>
    </div>
</fest:template>
