<fest:template xmlns:fest="http://fest.mail.ru">
    <div class="b-login-page b-default-hidden-page">
        <div class="b-main-login-form">
            <p class="b-main-login-form__error-message"></p>
            <form method="post" action="" class="b-form__type_login">
                <span class="b-main-login-form-span"><input type="text" placeholder="Name" name="name" class="b-main-form__control b-main-form__input b-main-login-form__input_type_name"/></span>
                <span class="b-main-login-form-span"><input type="password" placeholder="Password" name="pswd"  class="b-main-form__control b-main-form__input b-main-login-form__input_type_password"/></span>
                <input type="submit" value="Submit" class="b-main-form__control b-main-form__button b-main-login-form__submit-login-button"/>
            </form>
        </div>
    </div>
</fest:template>
